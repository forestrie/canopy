{
  "name": "@canopy/app",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev:vite": "vite dev",
    "dev": "wrangler dev --config wrangler.jsonc",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync",
    "sync": "svelte-kit sync",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "test:unit": "vitest run --config vitest.unit.config.ts",
    "test:scrapi": "echo 'SCRAPI unit tests temporarily disabled - run test:compliance for mandatory endpoint tests'",
    "test:compliance": "vitest run src/tests/scrapi-compliance.test.ts",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "lint": "prettier --check .",
    "fix:imports": "svelte-kit sync && echo 'âœ… SvelteKit type definitions regenerated. Please restart VSCode TypeScript service (Cmd+Shift+P > TypeScript: Restart TS Server)'"
  },
  "dependencies": {
    "cbor-x": "^1.5.9",
    "cose-js": "^0.9.0",
    "spark-md5": "^3.0.2",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.9.13",
    "@cloudflare/workers-types": "^4.20241127.0",
    "@sveltejs/adapter-cloudflare": "^4.9.0",
    "@sveltejs/kit": "^2.43.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.0",
    "@types/spark-md5": "^3.0.5",
    "@types/uuid": "^10.0.0",
    "miniflare": "4",
    "prettier": "^3.3.3",
    "svelte": "^5.39.5",
    "svelte-check": "^4.3.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vitest": "^2.1.9",
    "wrangler": "^4.43.0"
  }
}
